    $ renpy.pause(5)
    if not persistent.endings["main_good"]:
        $ persistent.endings["main_good"] = True
        if persistent.show_achievements:
            $ show_achievement("main_good")
            $ achievement.grant("ACH_MAIN_GOOD")
